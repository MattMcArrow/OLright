<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="#E41D37">

                <TextView
                    android:id="@+id/hrozba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aktuální hrozba"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:padding="16dp"
                    android:fontFamily="@font/oswald_bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/crisis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ÚTĚK TYGRA"
                    android:textSize="36sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:padding="8dp"
                    android:fontFamily="@font/oswald_bold" />

                <TextView
                    android:id="@+id/popis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ze ZOO utekl tygr, evakujte se okamžitě z vyznačené oblasti"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:fontFamily="@font/oswald_regular" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="16dp"
                    android:text="Ukončit upozornění"
                    android:id="@+id/btn"
                    android:fontFamily="@font/oswald_regular">
                </Button>
        </LinearLayout>

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
</LinearLayout>
